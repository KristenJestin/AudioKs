<UserControl x:Class="AudioKs.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioKs"
             mc:Ignorable="d" 
             d:DesignWidth="800">

    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,15">
        <TextBlock Text="{Binding Header, FallbackValue=MENU_NAME}" Foreground="{StaticResource PrimaryTextBrush}" TextTrimming="CharacterEllipsis"
                FontSize="40" FontFamily="{StaticResource Uni}" FontWeight="SemiBold" />
    </Grid>
</UserControl>
