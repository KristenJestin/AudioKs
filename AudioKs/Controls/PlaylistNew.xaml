<UserControl x:Class="AudioKs.PlaylistNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AudioKs"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BitmapImage x:Key="DefaultCoverImage" UriSource="../Images/Playlists/playlist-new.png" />
    </UserControl.Resources>

    <Image Source="{StaticResource DefaultCoverImage}" Height="212" Width="212" Stretch="UniformToFill" VerticalAlignment="Top" HorizontalAlignment="Center"
           MouseLeftButtonUp="Image_MouseLeftButtonUp" Margin="10" Cursor="Hand" />
</UserControl>
