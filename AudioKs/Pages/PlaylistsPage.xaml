<local:SwitchablePage x:Class="AudioKs.PlaylistsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AudioKs"
      mc:Ignorable="d" d:DesignWidth="1200"
      Title="Playlists">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <local:PageHeader Header="{DynamicResource playlists-title}" />

        <local:PlaylistContainer x:Name="PlContainer" Grid.Row="1" Margin="25,0,0,0" />

    </Grid>
</local:SwitchablePage>
